{% if section.settings.title %}
  <style>
  .header-wrapper {
    background-color: transparent;
  }

  .site-header.sticky-wrapper.is-sticky {
    background-color: transparent;
  }

  main.main-content {
    position: relative;
    z-index: 1;
  }

  .site-bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100vh;
    pointer-events: none;
    font-size: 56px;
    line-height: 1.2;
    opacity: 0.1;
    z-index: 0;
    transform: scale(1.3) rotate(-14deg);
    color: #ba6949;
    overflow: hidden;
  }
  </style>

  <div class="site-bg">
    {% for i in (1..150) %}
      <span>
        {{ section.settings.title }}
      </span>
    {% endfor %}
  </div>
{% endif %}


{% schema %}
{
  "name": "Site Background",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Text",
      "default": "Big Ass Sale"
    }
  ]
}
{% endschema %}