
<div id="index_layout tile-area">
  <div class="grid grid--full first-sec">
    <div class="grid__item large--one-third medium--one-third small--one-whole">
      {% if section.settings.image_1 != blank %}
      <div class="block-1">
        <a href="{{ section.settings.link_1 }}">
          <div class="image-1 tile-area-item full-height" style="background-image: url({{ section.settings.image_1 | img_url : 'original' }});
                                                                 background-position: center;">
            <img src="{{ section.settings.image_1 | img_url : 'original' }}" class="desktop-hide" />
            <div class="text-overlay tile-area-item-overlay">
              <div class="tile-area-item-copy">
                <div class="tile-area-item-title">{{ section.settings.text_1 }}</div>
              </div> 
            </div>      
          </div>
        </a>
      </div>
      {% endif %}
    </div>

    <div class="grid__item large--one-quarter medium--one-quarter small--one-half">
      {% if section.settings.image_2 != blank %}
      <div class="block-2">
        <a href="{{ section.settings.link_2 }}">
          <div class="image-2 tile-area-item half-height" style="background-image: url({{ section.settings.image_2 | img_url : 'original' }});
                                                                 background-position: center;">
            <img src="{{ section.settings.image_2 | img_url : 'original' }}" class="desktop-hide" />
            <div class="text-overlay tile-area-item-overlay">
              <div class="tile-area-item-copy">
                <div class="tile-area-item-title">{{ section.settings.text_2 }}</div>  
              </div> 
            </div>
          </div>
        </a>
      </div>
      {% endif %}

      {% if section.settings.image_3 != blank %}
      <div class="block-3">
        <a href="{{ section.settings.link_3 }}">
          <div class="image-3 tile-area-item half-height" style="background-image: url({{ section.settings.image_3 | img_url : 'original' }});
                                                                 background-position: center;">
            <img src="{{ section.settings.image_3 | img_url : 'original' }}" class="hide" />
            <div class="text-overlay tile-area-item-overlay">
              <div class="tile-area-item-copy">
                <div class="tile-area-item-title">{{ section.settings.text_3 }}</div>
              </div> 
            </div>
          </div>
        </a>
      </div>
      {% endif %}
    </div>

    <div class="grid__item large--one-sixth medium--one-sixth small--one-half">
      {% if section.settings.image_4 != blank %}
      <div class="block-4">
        <a href="{{ section.settings.link_4 }}">
          <div class="image-4 tile-area-item full-height" style="background-image: url({{ section.settings.image_4 | img_url : 'original' }});
                                                                 background-position: center;">
            <img src="{{ section.settings.image_4 | img_url : 'original' }}" class="desktop-hide" />
            <div class="text-overlay tile-area-item-overlay">
              <div class="tile-area-item-copy">
                <div class="tile-area-item-title">{{ section.settings.text_4 }}</div>
              </div>
            </div>
          </div>
        </a>
      </div>
      {% endif %}
    </div>

    <div class="grid__item large--one-quarter medium--one-quarter small--one-whole">
      <div class="grid grid--full">
        <div class="grid__item large--one-whole medium--one-whole small--one-half">
          {% if section.settings.image_5 != blank %}
          <div class='block-5'>
            <a href="{{ section.settings.link_5 }}">
              <div class="image-5 tile-area-item half-height" style="background-image: url({{ section.settings.image_5 | img_url : 'original' }});
                                                                     background-position: center;">
                <img src="{{ section.settings.image_5 | img_url : 'original' }}" class="desktop-hide" />
                <div class="text-overlay tile-area-item-overlay">
                  <div class="tile-area-item-copy">
                    <div class="tile-area-item-title">{{ section.settings.text_5 }}</div>  
                  </div>
                </div>
              </div>
            </a>
          </div>
          {% endif %}
        </div>
        <div class="grid__item large--one-whole medium--one-whole small--one-half">
          {% if section.settings.image_6 != blank %}
          <div class='block-6'>
            <a href="{{ section.settings.link_6 }}">
              <div class="image-6 tile-area-item half-height" style="background-image: url({{ section.settings.image_6 | img_url : 'original' }});
                                                                     background-position: center;">
                <img src="{{ section.settings.image_6 | img_url : 'original' }}" class="desktop-hide" />
                <div class="text-overlay tile-area-item-overlay">
                  <div class="tile-area-item-copy">
                    <div class="tile-area-item-title">{{ section.settings.text_6 }}</div> 
                  </div>
                </div>
              </div>
            </a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid--full second-sec">
    <div class="grid__item large--one-half medium--one-half small--one-whole left-box">
      {% if section.settings.image_7 != blank %}
      <div class="block">
        <a href="{{ section.settings.link_7 }}">
          <div class="image-cover">
            <img src="{{ section.settings.image_7 | img_url : 'original' }}" />
            <div class="site-portal__overlay">
              <div class="portal-overlay__container">
                {% if section.settings.text_7 != blank %}
                <div class="portal-overlay__title">
                  {{ section.settings.text_7 }}<span></span>
                </div> 
                {% endif %}
                <div class="portal-overlay__links">
                  <ul class="list-overlay">
                    {% for link in linklists[section.settings.menu_7].links %}
                    <li>
                      <a href="{{link.url}}" class='{% if link.active %}active{% endif %}'>
                        <span></span>
                        {{link.title}}
                      </a>
                    </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
      {% endif %}
    </div>

    <div class="grid__item large--one-half medium--one-half small--one-whole right-box">
      {% if section.settings.image_8 != blank %}
      <div class="block">
        <a href="{{ section.settings.link_8 }}">
          <div class="image-cover">
            <img src="{{ section.settings.image_8 | img_url : 'original' }}" />
            <div class="portal-overlay__container">
              <div class="portal-overlay-item-copy">
                <div class="portal-overlay__title">
                  {{ section.settings.text_8 }}
                </div>
              </div>
            </div>      
          </div>
        </a>
      </div>
      {% endif %}
    </div>
  </div> 

  <div class="grid third-sec">
    {% if section.settings.home_collection != blank %}
    <div class="featured-products">
      {% if section.settings.featured_prod_title %}
      <div class="grid__item"><h3>{{ section.settings.featured_prod_title }}</h3></div>
      {% endif %}
      {% if section.settings.collection_products_per_row == '3' %}
      {% assign grid_item_width = 'medium--one-half large--one-third' %}
      {% elsif  section.settings.collection_products_per_row == '4' %}
      {% assign grid_item_width = 'medium--one-half large--one-quarter' %}
      {% elsif section.settings.collection_products_per_row == '5' %}
      {% assign grid_item_width = 'medium--one-half large--one-fifth' %}
      {% elsif section.settings.collection_products_per_row == '6' %}
      {% assign grid_item_width = 'medium--one-half large--one-sixth' %}
      {% endif %}

      {% for product in collections[section.settings.home_collection].products limit:8 %}
      {% include 'product-grid-item' %}
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>


